@model AnkitKumar_SchoolApp.Models.Course

<h2>Delete Course</h2>

<h4 class="text-danger">Are you sure you want to delete this course?</h4>

<div class="mb-3">
    <strong>Course Code:</strong> @Model.CourseCode <br />
    <strong>Course Name:</strong> @Model.CourseName <br />
    <strong>Teacher ID:</strong> @Model.TeacherId <br />
    <strong>Start Date:</strong> @Model.StartDate?.ToString("yyyy-MM-dd") <br />
    <strong>Finish Date:</strong> @Model.FinishDate?.ToString("yyyy-MM-dd") <br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("List", "CoursePage")'">Cancel</button>
</form>
