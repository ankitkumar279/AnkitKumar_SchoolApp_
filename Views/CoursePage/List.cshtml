@model IEnumerable<AnkitKumar_SchoolApp.Models.Course>

<h2>Courses List</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Course ID</th>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Teacher ID</th>
            <th>Start Date</th>
            <th>Finish Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.CourseCode</td>
                <td>@course.CourseName</td>
                <td>@course.TeacherId</td>
                <td>@course.StartDate?.ToString("yyyy-MM-dd")</td>
                <td>@course.FinishDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Show", "CoursePage", new { id = course.CourseId })">View</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "CoursePage", new { id = course.CourseId })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "CoursePage", new { id = course.CourseId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex gap-2">
    <a class="btn btn-success" href="@Url.Action("Create", "CoursePage")">Add New Course</a>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Back</a>
</div>
