@model AnkitKumar_SchoolApp.Models.Student

<h2>Delete Student</h2>

<h4 class="text-danger">Are you sure you want to delete this student?</h4>

<div class="mb-3">
    <strong>Student Number:</strong> @Model.StudentNumber <br />
    <strong>Name:</strong> @Model.StudentFName @Model.StudentLName <br />
    <strong>Enrol Date:</strong> @Model.EnrolDate?.ToString("yyyy-MM-dd") <br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StudentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("List", "StudentPage")'">Cancel</button>
</form>
