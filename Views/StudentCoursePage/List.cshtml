@model IEnumerable<AnkitKumar_SchoolApp.Models.StudentCourse>

<h2>Student Courses List</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Student ID</th>
            <th>Course ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sc in Model)
        {
            <tr>
                <td>@sc.StudentXCourseId</td>
                <td>@sc.StudentId</td>
                <td>@sc.CourseId</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Show", "StudentCoursePage", new { id = sc.StudentXCourseId })">View</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "StudentCoursePage", new { id = sc.StudentXCourseId })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "StudentCoursePage", new { id = sc.StudentXCourseId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex gap-2">
    <a class="btn btn-success" href="@Url.Action("Create", "StudentCoursePage")">Add New Enrollment</a>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Back</a>
</div>
